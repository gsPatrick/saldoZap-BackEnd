# .env - Example Environment Variables for Smart-Custo API

#########################################################################
# DATABASE CONFIGURATION (CRITICAL - REPLACE WITH YOUR ACTUAL VALUES!)
#########################################################################

DB_HOST=smart_smart_custo  # Hostname or IP address of your PostgreSQL database server
                         # For Easypanel internal database, use 'smart_smart_custo'
                         # If database is external, use its public IP or hostname

DB_PORT=5432             # Port number of your PostgreSQL database server (default is 5432)

DB_USER=smart_custo        # Username for database access
DB_PASSWORD=smart_custo    # Password for database access
DB_DATABASE=smart_custo      # Name of your PostgreSQL database


#########################################################################
# API SERVER CONFIGURATION
#########################################################################

API_PORT=3001          
CORS_ORIGINS=https://seu-dashboard.com.br,https://sua-landing-page.com.br
 
NODE_ENV=development    


LOG_LEVEL=info           
LOG_FILE_PATH=./logs/smart-custo-api.log
 
